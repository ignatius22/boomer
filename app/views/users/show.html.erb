<div class="flex justify-between">
  <div class=" w-1/6 left-hand-side border-r-2">
      <div class="flex-col h-full justify-between ">
      <div class="flex-col justify-between h-3/5 mx-10 my-10" style="">
        <div class="h-1/6">
          <%= link_to "Create", new_user_post_path(current_user) %>
        </div>
        <div class="h-1/6">
          Explore
        </div>
        <div class="h-1/6">
          Search
        </div>
        <div class="h-1/6">
          Messages
        </div>
        <div class="h-1/6">
          Notification
        </div>
        <div class="h-1/6">
          Profile
        </div>
      </div>
      <div class="border w-full text-center p-2" style="position:absolute; top:95%">
        Menu
      </div>
    </div>
  </div>
  <div class="flex w-5/6 justify-between scroll-smooth">
    <div class="flex-col mt-20" style="margin-left: 25%; height: 500px; width:100%;">
       <div class="flex" style=" height: 500px; width:100%;">
          <div class="border p-4 " style="width:500px" >
            <h1><%= @post.title %></h1>
            <p><%= @post.description %></p>
            <div class="h-2/6 w-fit">
                <%= image_tag @post.photo, class:"h-4/5" if @post.photo.attached?  %>
            </div>

        </div>
        <div class="border" style="width:350px">
            
        </div>
    </div>

    <div class="mt-10 border-b" style="width: 850px;"></div>
    <% @posts.each do |post| %>
        <div class="flex flex-wrap justify-between mt-20" style="width: 850px;">
           <div class="border" style="width:280px; height:300px">
              <h1><%= post.title %></h1>
              <p><%= post.description %></p>
              <%= image_tag post.photo,class: "h-1/6"  if post.photo.attached? %>
           </div>
        </div>
      </div>
    <% end %>
    <div class="w-1/4 justify-self-center text-center">
    </div>
  </div>
</div>
