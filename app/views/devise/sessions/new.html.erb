<div class="reg">
  <div class="spacer"></div>
  <div class="px-4 py-8 border w-1/5 shadow shawdow-bg-white hand">
    <h2 class="text-2xl p-y-4 font-bold txt-color">Log In</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field py-4">
        <%= f.label :email, class:'text-sm text-slate-600 font-light' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:'input bg-slate-50',placeholder:'Enter your email' %>
      </div>

      <div class="field py-2">
        <%= f.label :password, class:'text-sm text-slate-600 font-light'  %><br />
        <%= f.password_field :password, autocomplete: "current-password",class:'input bg-slate-50',placeholder:'Enter password' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me, class:'h-3 w-3 bg-slate-600'  %>
          <%= f.label :remember_me, class:'text-xs' %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class:"text-sm bg-amber-400  font-light px-6 py-2 my-3 shadow-slate-400 shadow "%>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
  <div class="spacer"></div>
</div>