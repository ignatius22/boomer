<div class="reg">
  <div class="spacer"></div>
  <div class="px-4 py-8 border w-1/5 shadow hand">
    <h2 class="text-2xl p-y-4 font-bold txt-color">Sign Up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field py-4">
        <%= f.label :email,  class:'text-sm text-slate-600 font-light' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'input bg-slate-50' %>
      </div>
      <div class="field py-4">
        <%= f.label :first_name, class:'text-sm text-slate-600 font-light' %><br />
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class:'input bg-slate-50' %>
      </div>
       
      <div class="field py-4">
        <%= f.label :last_name, class:'text-sm text-slate-600 font-light' %><br />
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class:'input bg-slate-50' %> 
      </div>
  
      <div>
        <%= f.label :username, class:'text-sm text-slate-600 font-light' %><br />
        <%= f.text_field :username, autofocus: true, autocomplete: "username", class:'input bg-slate-50' %> 
      </div>
      <div>
        <%= f.label :bio, class:'text-sm text-slate-600 font-light' %><br />
        <%= f.text_area :bio, autofocus: true, autocomplete: "bio", class:'input bg-slate-50' %>
      </div>
      <div class="field py-4">
        <%= f.label :profile_photo %>
        <%= f.file_field :profile_photo, class: 'input bg-slate-50' %>
      </div>
      <div class="field py-2">
        <%= f.label :password, class:'text-sm text-slate-600 font-light'  %>
        <% if @minimum_password_length %>
        <em class="text-xs text-slate-300">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:'input bg-slate-50 font-light' %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class:'text-sm text-slate-600 font-light' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'input bg-slate-50' %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class:"text-sm  bg-amber-400 px-6 py-2 my-3 shadow-slate-400 shadow " %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
 <div class="spacer"></div>
</div>