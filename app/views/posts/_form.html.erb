<%= form_with(model: [@user, @post], url: user_post_path(@user, @post), local: true) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title, placeholder: "Title" %>
    <% form.object.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="">
    <%= form.label :description %>
    <%= form.text_area :description, placeholder: "Description" %>
    <%= form.label :photo %><br>
    <%= form.file_field :photo %>
    <% form.object.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
