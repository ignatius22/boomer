<%= form_with(model: [@user, @post], url: user_posts_path(@user,@post), local: true) do |form| %>
  <div>
    <%= form.text_field :title,  placeholder:"title", class:"input my-5" %>
  </div>

    <div class="">
      <div class="flex-col">
        <div>
          <%= form.text_area :description, placeholder:"description", class:"input" %>
        </div>
        <div class="my-3">
          <%= form.file_field :photo, class: "custom-file-input" %>
          <%# <%= form.file_field :photo, class: "custom-file-input", id: "customFile" %> 
        </div>
      </div>

      <div>
        <%= form.submit class:"bg-red-300 w-full p-2 text-white text-xs font-bold" %>
      </div>

      <div class="my-5">
        <% @post.errors.full_messages_for(:description).each do |message| %>
          <div class="font-light text-xs text-red-500"><%= message %></div>
      <% end %>
      <% @post.errors.full_messages_for(:title).each do |message| %>
        <div class="font-light text-xs text-red-500"><%= message %></div>
      <% end %>
      </div>
    </div>
<% end %>