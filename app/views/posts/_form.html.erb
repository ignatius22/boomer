<%= form_with(model: [@user, @post], url: user_posts_path(@user,@post), local: true) do |form| %>
  <div>

    <%= form.text_field :title,  placeholder:"title" %>
    <% @post.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="">
    <%= form.text_area :description, placeholder:"description" %><br>
    <%= form.label :photo %><br>
    <%= form.file_field :photo %>
    <% @post.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>